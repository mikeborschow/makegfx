{
  "name": "makegfx-gui",
  "version": "1.0.0",
  "description": "GUI for generating graphics from CSV data",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build": "electron-builder"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "30.0.0",
    "electron-builder": "24.0.0"
  },
  "dependencies": {
    "csv-parse": "5.0.0",
    "express": "4.18.0"
  },
  "build": {
    "appId": "com.yourcompany.makegfx",
    "productName": "MakeGFX",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.cache/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
